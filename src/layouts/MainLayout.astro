---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Jakob Ferdinand Wegenschimmel",
  description = "The personal homepage of Jakob Ferdinand Wegenschimmel",
} = Astro.props as Props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <div class="page">
      <header class="site-header">
        <a class="brand" href="/">JFW</a>
        <nav class="nav-links">
          <a href="/blog">Blog</a>
          <a href="https://github.com/JakobFerdinand" target="_blank" rel="noreferrer noopener">Github</a>
        </nav>
      </header>
      <main class="site-main">
        <div class="main-content">
          <slot />
        </div>
      </main>
      <footer class="site-footer">
        <a href="https://astro.build/" target="_blank" rel="noreferrer noopener">powered by Astro</a>
      </footer>
    </div>
  </body>
</html>
